@{
    ViewData["Title"] = "Bids and Awards Committee";
}

<div class="video-background">
    <video autoplay muted loop id="bg-video">
        <source src="~/videos/farm.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<div class="iss-container text-center text-white">
    <h1 class="section-title mb-4 text-success">Bids and Awards Committee (BAC)</h1>
    <p class="section-text">Services to be followed</p>
</div>

<style>
    body {
        margin: 0;
        font-family: "Segoe UI", sans-serif;
        overflow-x: hidden;
    }

    /* Background video setup */
    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
    }

    #bg-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Container */
    .iss-container {
        position: relative;
        z-index: 1;
        padding: 150px 20px;
        text-align: center;
        color: #fff;
    }

    /* Title styling with outline and shadow */
    .section-title {
        font-size: 3rem;
        font-weight: 800;
        color: #fff;
        -webkit-text-stroke: 1px #000;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
    }

    /* Paragraph text styling */
    .section-text {
        font-size: 1.8rem;
        font-weight: 500;
        color: #f1f1f1;
        -webkit-text-stroke: 0.5px #000;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);
    }

    /* Button style (for future use) */
    .btn-success {
        font-size: 1.3rem;
        padding: 14px 35px;
        border-radius: 12px;
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease;
        margin-top: 20px;
    }

    .btn-success:hover {
        background-color: #218838;
    }
</style>
