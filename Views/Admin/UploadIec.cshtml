@model ATI_IEC.Models.IecDocument

<div class="container mt-5">
    <h2>Upload IEC Documents</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Upload Form -->
    <form asp-action="UploadIec" method="post" enctype="multipart/form-data" class="mb-4">
        <div class="form-group mb-3">
            <label>Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Description (optional)</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label>Select File</label>
            <input type="file" name="uploadedFile" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>

    <!-- Uploaded IEC List -->
    <h3>Uploaded IEC Documents</h3>
    <div class="row">
        @foreach (var doc in ViewBag.IecDocuments as List<ATI_IEC.Models.IecDocument>)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">@doc.Title</h5>
                        @if (!string.IsNullOrEmpty(doc.Description))
                        {
                            <p>@doc.Description</p>
                        }
                        <p><small>Uploaded on: @doc.UploadDate.ToString("MMMM dd, yyyy")</small></p>

                        <iframe src="@doc.FilePath" width="100%" height="300px"></iframe>
                        <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-primary mt-2">Open Full</a>

                        <!-- Delete Button -->
                        <form asp-action="DeleteIec" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@doc.Id" />
                            <button type="submit" class="btn btn-sm btn-danger mt-2"
                                    onclick="return confirm('Are you sure you want to delete this IEC?');">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
